# Linear interpolation
pt=df['PT08.S3(NOx)'].copy()
pt.interpolate(inplace=True)


# In[7]:


# Visualize original and imputed data
plt.plot(df['PT08.S3(NOx)'], label='original', zorder=2)
plt.plot(pt, label='linear interpolation', zorder=1)
